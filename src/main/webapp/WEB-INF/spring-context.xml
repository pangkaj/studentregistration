<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xmlns:tx="http://www.springframework.org/schema/tx"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.2.xsd
http://www.springframework.org/schema/tx
http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">
 
<context:component-scan base-package="edu.daffodils.studentmanagement.controller" />
<context:component-scan base-package="edu.daffodils.studentmanagement.dao" />
<context:component-scan base-package="edu.daffodils.studentmanagement.service"/>

<context:annotation-config/>
<context:spring-configured/>

<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
<property name="driverClassName" value="org.postgresql.Driver"/>
<property name="url" value="jdbc:postgresql://localhost:5432/studentmanagement"/>
<property name="username" value="daffodil"/>
<property name="password" value="abcd1234"/>
</bean>

<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
	<property name="dataSource" ref="dataSource"/>
</bean>

<tx:annotation-driven transaction-manager="txManager"/>

<bean id="studentDAO" class="edu.daffodils.studentmanagement.dao.StudentDAOImpl">
        <property name="dataSource" ref="dataSource" />
</bean>

<bean id="studentManager" class="edu.daffodils.studentmanagement.service.StudentServiceImpl">
        <property name="studentDAO" ref="studentDAO" />
</bean>

</beans> 